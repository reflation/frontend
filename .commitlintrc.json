{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "subject-case": [
      1,
      "always",
      [
        "lower-case",
        "camel-case",
        "kebab-case",
        "pascal-case",
        "sentence-case",
        "snake-case",
        "start-case"
      ]
    ],
    "type-enum": [
      2,
      "always",
      [
        "chore",
        "lint",
        "build",
        "docs",
        "feat",
        "fix",
        "refact",
        "revert",
        "style",
        "test",
        "hack",
        "merge"
      ]
    ]
  }
}
